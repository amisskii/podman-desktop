summary: Execute smoke Playwright end-to-end tests. 
tag:
  - smoke
duration: 2h
framework: shell
test: |
  echo $TMT_TEST_DATA
  cd $TMT_TREE
  pnpm install
  pnpm test:e2e:smoke
  ls $TMT_TEST_DATA
  cat <<EOF > $TMT_TEST_DATA/results.yaml
  - name: smoke-test
    result: pass
    note: "Playwright test executed and results referenced directly from original location."
    log:
      - /tests/playwright/output/junit-results.xml
  EOF
result: custom
